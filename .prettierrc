{
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2,
                "parser": "yaml"
            }
        },
        {
            "files": ".prettierrc",
            "options": { "parser": "json" }
        }
    ]
}
